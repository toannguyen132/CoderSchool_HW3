<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <header class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <div class="navbav-sections">
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to 'Upcoming Events', upcoming_path, class: 'nav-link'  %>
        </li>
        <% unless logged_in? %>
          <li class="nav-item">
            <%= link_to "Log In", login_path, class: "nav-link"  %>
          </li>
        <% end %>
      </ul>
      <% if logged_in? %>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <div class="dropdown">
              <a class="nav-link" role="button" data-toggle="dropdown"><%= current_user.name %></a>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><%= link_to "Create Event", new_event_path, class: "nav-link"  %></li>
                <li><%= link_to "My Events", mine_events_path, class: "nav-link"  %></li>
                <li><%= link_to "Log out", logout_path, method: 'delete', class: "nav-link"  %></li>
              </ul>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
  </header>  
  <%= flash_message %>

<%= yield %>

  <%= javascript_include_tag 'application'%>
</body>
</html>
