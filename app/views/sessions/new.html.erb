<div class="container">
  <h1 class="text-center">Login</h1>
  <div class="box box-sm">
    <%= form_tag sessions_path do |f| %>
      <div class="form-group">
        <label>Email</label>
        <%= text_field_tag :email, nil, placeholder: "Please enter your email", class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Password</label>
        <%= password_field_tag :password, nil, placeholder: "Please enter your password", class: 'form-control' %>
      </div>
      <%= button_tag "Log In", class: "btn btn-primary btn-block" %>
      <p class='text-center mt-2'><%= link_to "Don't have an account yet?", register_path %></p>
    <% end %>
      
  </div>
</div>
