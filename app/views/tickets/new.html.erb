<div class="container-fluid tickets-buy">
  <div class="row tickets-header">
    <div class="col-xs-12 col-md-11 col-md-offset-1">
      <h3> <%= @event.name %> </h3>
      <div class="pull-left">
        <%= fa_icon 'map-marker' %>
      </div>
      <div class="venue-details">
       <%= @event.venue.name %>
       <br/>
       <%= @event.venue.full_address %>
      </div>

      <div class="pull-left">
        <%= fa_icon 'clock-o' %>
      </div>
      <div class="time-details"> 
        <%= @event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %> 
      </div>


    </div>
  </div>
  <%= form_for(@order, :url => event_tickets_path, :method => 'post') do |f| %>
    <div class="row">
      <div class="col-md-11 col-md-offset-1">  
        <table class="table">
          <th> Ticket Type </th>
          <th> Unit Price </th>
          <th> Quantity </th>
        
          <% @event.ticket_types.each_with_index do |type, index| %>
            <%= f.fields_for :order_items, @order.order_items.build do |item| %>
              <tr>
                <td> 
                  <%= type.name %> 
                  <%= item.hidden_field :ticket_type_id, value: type.id %>
                </td>
                <td> <%= number_to_currency(type.price, unit: 'VND ', precision: 0) %> </td>
                <td> 
                  <%= item.select :quantity, options_for_select(0..10) %>
                </td> 
              </tr>
            <% end %>
          <% end %> 
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-5">
        <button type="submit" class="btn btn-success btn-lg btn-block"> Buy </button>
      </div>
    <div>
  <% end %>
</div>  

