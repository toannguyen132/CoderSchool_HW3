
<div class="container">
  <h1 class="text-center">Sign up</h1>
  <div class="box box-sm">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, placeholder: "Please enter your name", class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.text_field :email, placeholder: "Please enter your email", class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Password</label>
        <%= f.password_field :password, placeholder: "Please enter your password", class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Password</label>
        <%= f.password_field :password_confirmation, placeholder: "Please confirm your password", class: 'form-control' %>
      </div>
      <%= button_tag "Log in", class: "btn btn-primary btn-block" %>
    <% end %>
      
  </div>
</div>
